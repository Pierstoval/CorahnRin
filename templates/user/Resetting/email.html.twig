{% extends 'email/email_layout_internal.html.twig' %}

{% trans_default_domain 'user' %}

{% import 'email/_macros.html.twig' as macros %}

{% set textMessage %}
    {{ 'resetting.email.subject'|trans({'%username%': user.username}) }}
{% endset %}

{% block title (textMessage|striptags) %}

{% block content %}
    {% set message = ('resetting.email.message'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl})|raw|nl2br) %}
    {{ macros.text(message) }}
{% endblock %}
